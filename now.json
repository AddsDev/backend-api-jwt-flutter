{
  "version": 1,
  "builds": [
    {
      "src": "./src/index.ts",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/src/index.ts",
      "methods": ["GET"]
    },
    {
      "src": "/api/v1/register",
      "dest": "/src/routes/index.ts",
      "methods": ["POST"]
    },
    {
      "src": "/api/v1/login",
      "dest": "/src/routes/index.ts",
      "methods": ["POST"]
    },
    {
      "src": "/api/v1/refresh-token",
      "dest": "/src/routes/index.ts",
      "methods": ["POST"]
    },
    {
      "src": "/api/v1/update-avatar",
      "dest": "/src/routes/index.ts",
      "methods": ["POST"]
    },
    {
      "src": "/api/v1/user-info",
      "dest": "/src/routes/index.ts",
      "methods": ["GET"]
    }
  ],
  "public": false
}
